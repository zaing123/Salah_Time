<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Salah Times Admin Panel</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/assets/img/salah-icon.png">

    <!-- Fonts and icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900">
    <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/assets/css/nucleo-svg.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" />

    <!-- Bootstrap & Dashboard CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link id="pagestyle" href="~/assets/css/material-dashboard.css?v=3.2.0" rel="stylesheet" />
</head>

<body class="bg-gray-100">

    <!-- Sidebar -->
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-radius-lg fixed-start bg-white my-3 ms-3" id="sidenav-main">
        <div class="sidenav-header">
            <a class="navbar-brand m-0 d-flex align-items-center" href="/Home/Index">
                <span class="text-dark fw-semibold" style="font-size: 16px;">Salah Times Admin</span>
            </a>
        </div>
        <hr class="horizontal dark mt-0">
        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Home/Index">
                        <i class="material-symbols-rounded opacity-6">dashboard</i>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Cities">
                        <i class="material-symbols-rounded opacity-6">location_city</i>
                        <span class="nav-link-text ms-1">Manage Cities</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/SalahTimes">
                        <i class="material-symbols-rounded opacity-6">schedule</i>
                        <span class="nav-link-text ms-1">Manage Salah Times</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Users">
                        <i class="material-symbols-rounded opacity-6">group</i>
                        <span class="nav-link-text ms-1">Manage Users</span>
                    </a>
                </li>
                
            </ul>
        </div>
    </aside>

    <!-- Page Content -->
    <div class="main-content d-flex flex-column min-vh-100" style="margin-left: 260px;">
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="footer bg-white py-3 border-top mt-auto">
            <div class="container-fluid">
                <div class="row align-items-center justify-content-between">
                    <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                        <small class="text-muted">
                            © <script>document.write(new Date().getFullYear())</script> Salah Times Admin |
                            Made with <i class="fa fa-heart text-danger"></i> in ASP.NET Core
                        </small>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <ul class="nav justify-content-center justify-content-md-end">
                            <li class="nav-item"><a class="nav-link text-muted" href="#">Help</a></li>
                            <li class="nav-item"><a class="nav-link text-muted" href="#">Support</a></li>
                            <li class="nav-item"><a class="nav-link text-muted" href="#">Docs</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>
    <script src="~/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="~/assets/js/material-dashboard.min.js?v=3.2.0"></script>
    <script src="~/assets/js/plugins/chartjs.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
