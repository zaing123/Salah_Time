@model SalahTimes.Models.City

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid mt-4">
    <div class="card shadow-lg border-2 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">⚠️ Confirm Delete</h4>
        </div>

        <div class="card-body">
            <h5 class="text-danger mb-4">Are you sure you want to delete this city?</h5>

            <div class="px-2">
                <p><strong>City Name:</strong> @Html.DisplayFor(model => model.CityName)</p>
                <p><strong>Country:</strong> @Html.DisplayFor(model => model.Country)</p>
                <p><strong>Latitude:</strong> @Html.DisplayFor(model => model.Latitude)</p>
                <p><strong>Longitude:</strong> @Html.DisplayFor(model => model.Longitude)</p>
                <p><strong>Timezone:</strong> @Html.DisplayFor(model => model.Timezone)</p>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
