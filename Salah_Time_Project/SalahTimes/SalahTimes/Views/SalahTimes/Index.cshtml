@model IEnumerable<SalahTimes.Models.SalahTime>
@{
    ViewData["Title"] = "Salah Times";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-mosque me-2"></i> Manage Salah Times
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Add New Salah Time
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Fajr</th>
                            <th>Dhuhr</th>
                            <th>Asr</th>
                            <th>Maghrib</th>
                            <th>Isha</th>
                            <th>City</th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToString("dd MMM yyyy")</td>
                                <td><span class="badge bg-info">@item.Fajr.ToString(@"hh\:mm")</span></td>
                                <td><span class="badge bg-primary">@item.Dhuhr.ToString(@"hh\:mm")</span></td>
                                <td><span class="badge bg-warning text-dark">@item.Asr.ToString(@"hh\:mm")</span></td>
                                <td><span class="badge bg-danger">@item.Maghrib.ToString(@"hh\:mm")</span></td>
                                <td><span class="badge bg-dark">@item.Isha.ToString(@"hh\:mm")</span></td>
                                <td>@item.City?.CityName</td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-warning text-center mt-3">
                        No Salah times added yet.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
