@model SalahTimes.Models.SalahTime

@{
    ViewData["Title"] = "Edit Salah Time";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-edit me-2"></i> Edit Salah Time
            </h4>
            <a asp-action="Index" class="btn btn-sm btn-dark">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="CityId" class="form-label fw-semibold">City</label>
                        <select asp-for="CityId" class="form-select border border-secondary" asp-items="ViewBag.CityId">
                            <option value="">-- Select City --</option>
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Date" class="form-label fw-semibold">Date</label>
                        <input asp-for="Date" type="date" class="form-control border border-secondary" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Fajr" class="form-label">Fajr</label>
                        <input asp-for="Fajr" type="time" class="form-control border border-secondary" />
                        <span asp-validation-for="Fajr" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Dhuhr" class="form-label">Dhuhr</label>
                        <input asp-for="Dhuhr" type="time" class="form-control border border-secondary" />
                        <span asp-validation-for="Dhuhr" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Asr" class="form-label">Asr</label>
                        <input asp-for="Asr" type="time" class="form-control border border-secondary" />
                        <span asp-validation-for="Asr" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Maghrib" class="form-label">Maghrib</label>
                        <input asp-for="Maghrib" type="time" class="form-control border border-secondary" />
                        <span asp-validation-for="Maghrib" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Isha" class="form-label">Isha</label>
                        <input asp-for="Isha" type="time" class="form-control border border-secondary" />
                        <span asp-validation-for="Isha" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}